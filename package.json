{
  "name": "opencrud",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "types": "npx openapi-fetch-typescript ./public/openapi.json ./app/openapi-types.ts OpenApiTypes",
    "watch-types": "nodemon --watch public/openapi.json --exec \"npm run types\"",
    "next-dev": "next dev",
    "init-db": "bun run app/makeRootDb.cli.ts",
    "dev": "concurrently \"next dev\" \"npm:watch-types\""
  },
  "dependencies": {
    "actionschema": "^0.0.38",
    "ajv": "^8.12.0",
    "from-anywhere": "^0.0.29",
    "json-schema": "^0.4.0",
    "next": "14.2.1",
    "openapi-for-humans-react": "^0.0.39",
    "openapi-types": "^12.1.3",
    "openapi-typescript": "^6.7.5",
    "openapi-util": "^0.0.42",
    "qs": "^6.12.1",
    "react": "^18",
    "react-dom": "^18",
    "react-openapi-form": "^0.0.15"
  },
  "devDependencies": {
    "@types/ajv": "^1.0.0",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^20",
    "@types/qs": "^6.9.15",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "bun": "^1.1.4",
    "concurrently": "^8.2.2",
    "eslint": "^8",
    "eslint-config-next": "14.2.1",
    "nodemon": "^3.1.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
