{
  "include": ["src", "api"],
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es2022", "DOM"],
    "module": "ESNext",
    "outDir": "build",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "jsx": "react-jsx"
  }
}
